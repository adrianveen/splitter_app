{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Ext Terminal – Main App",
      "type": "debugpy",
      "request": "launch",
      "module": "splitter_app.main",
      "console": "externalTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Int Terminal – Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Debug SplitterApp (module)",
      "type": "debugpy",
      "request": "launch",
      "module": "splitter_app.main",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    }
  ]
}


